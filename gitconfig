## Include this code on .gitconfig:

## Windows
# [include]
#     path=~/vimfiles/gitconfig
#

## *nix/osx
# [include]
#     path=~/.vim/gitconfig
#

[push]
	default = simple

[alias]
	l = log --oneline --decorate --abbrev-commit
	lg = log --oneline --decorate --graph --abbrev-commit
[branch]
    autoSetupMerge = false
